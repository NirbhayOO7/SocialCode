
<div>
    <br>
    <% if(accessToken.isValid == true) {%>
        <form action="/users/submit-password-change/<%= accessToken.access_token %>" method="post">
            <input type="password" name="password" placeholder="password" required>
            <input type="password" name="confirm_password" placeholder="Confirm Passowrd" required>
            <input type="submit" value="Submit">
        </form>
    <% }else{ %>
        <p>Access Token Expired!</p>
    <% } %>
</div>
